{
  "name": "react-course",
  "version": "1.0.0",
  "description": "Learning how to create a ReactJS environment from the ground up using bable, react, sass, bootstrap and webpack.",
  "main": "index.js",
  "babel": {
    "stage": 0
  },
  "scripts": {
    "start": "webpack-dev-server --hot --inline ./app.js",
    "dev": "NODE_MAP=FALSE webpack-dev-server --host 0.0.0.0 --progress --colors --hot --inline --content-base build/",
    "map": "NODE_MAP=TRUE webpack-dev-server --hot --inline --hot --inline --content-base build/",
    "build": "NODE_ENV=production; webpack --progress --profile --colors",
    "compile": "babel --stage 0"
  },
  "author": "Richard Pasqualone",
  "license": "ISC",
  "dependencies": {
    "babel-runtime": "^5.6.18",
    "bootstrap": "^3.3.5",
    "react": "^0.13.3",
    "react-router": "^0.13.3"
  },
  "devDependencies": {
    "alt": "^0.17.4",
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "css-loader": "^0.19.0",
    "node-sass": "^3.3.3",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.0.0",
    "style-loader": "^0.12.4",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  }
}
